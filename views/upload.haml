#header
  %h1 Score Library
  = Haml::Engine.new(File.read('logout.haml')).render
#upload
  %form(action="/upload/#{@user}" method='POST')
    %label 投稿者
      %p #{@user}
    %label タイトル
    %input(type='text'name='song-name')
    %label 作曲者
    %input(type='text'name='song-writer')
    %label ジャンル
    %select(name='type')
      %option(value='none') 指定なし
      %option(value='japan') 邦楽
      %option(value='en') 洋楽
      %option(value='other') その他
    %label 人数
    %select(name='peaple-num')
      %option(value='four') 4人
      %option(value='five') 5人
      %option(value='six') 6人
      %option(value='over-seven') 7人以上
    %input(type='submit',value='Upload')
